{
  "name": "Envoy MQTT",
  "version": "1.0.2",
  "slug": "envoy_mqtt",
  "description": "TCP-фейловер между несколькими MQTT-брокерами через Envoy Proxy",
  "arch": ["amd64", "armv7", "armhf", "aarch64"],
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "map": ["config:rw"],
  "tmpfs": true,
  "build": true,
  "options": {
    "port": 1885,
    "brokers": [
      "192.168.2.48",
      "192.168.2.33",
      "192.168.2.34",
      "192.168.2.35"
    ]
  },
  "schema": {
    "port": "int(1,65535)",
    "brokers": [
      "str"
    ]
  }
}
