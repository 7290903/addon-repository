{
  "name": "Envoy MQTT Failover",
  "version": "1.0.0",
  "slug": "envoy_mqtt",
  "description": "TCP-фейловер между несколькими MQTT-брокерами через Envoy Proxy",
  "url": "https://github.com/7290903/addon-repository/tree/main/envoy-mqtt",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "map": ["config:rw"],
  "tmpfs": true,
  
  "options": {
    "port": 1885,
    "brokers": [
      "192.168.2.48",
      "192.168.2.33"
    ]
  },
  "schema": {
    "port": "int(1,65535)",
    "brokers": "list(str)"
  },
  "arch": ["armhf", "armv7", "amd64", "aarch64"]
}
