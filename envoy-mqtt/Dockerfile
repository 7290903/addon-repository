FROM envoyproxy/envoy:v1.29-latest

# –ö–æ–ø–∏—Ä—É–µ–º —Å–∫—Ä–∏–ø—Ç—ã –∏ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
COPY run.sh /run.sh

# –†–∞–∑—Ä–µ—à–∏–º –∑–∞–ø—É—Å–∫
RUN chmod +x /run.sh

# –£—Å—Ç–∞–Ω–æ–≤–∏–º —É—Ç–∏–ª–∏—Ç—É jq –¥–ª—è —á—Ç–µ–Ω–∏—è JSON
RUN apt-get update && \
    apt-get install -y jq bash && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# –¢–æ—á–∫–∞ –≤—Ö–æ–¥–∞
USER root
